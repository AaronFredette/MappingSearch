@model List<MappingSearch.Data.Product>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" value="@ViewBag.CategoryName" id="categoryName" />
<h2>@ViewBag.CategoryName</h2>
<div class="well">
    <div>
       <a href="/Reviews">Choose Category</a>
    </div>
</div>


<div class="well span2">
    left nav
</div>

<div  class="well  span8">
    <div id="filterContainer" class="row text-center">
        
    </div>
    

    <div id="contentBody">

    </div>
    <div style="display:none" id="noProductsFound">
            <p class="alert alert-info">No products match your criteria.</p>
        </div>
</div>

<script type="text/html" id="ProductsViewTemplate">
   <a href="/Review/Index/<%= ProductId%>">
