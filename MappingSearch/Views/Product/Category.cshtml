@model List<MappingSearch.Data.Product>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" value="@ViewBag.CategoryName" id="categoryName" />
<h2>@ViewBag.CategoryName</h2>
<div class="well">
    <div>
       <a href="@MappingSearch.Constants.PathConstants.Pages.ReviewRootPath">Choose Category</a>
    </div>
</div>


<div class="well span2">
    left nav
</div>

<div  class="well  span8">
    <div id="filterContainer" class="row text-center">
        
    </div>
    @if(MappingSearch.Classes.CurrentCategory.IsGear()){
        <a href="@MappingSearch.Constants.PathConstants.Pages.AddGearPath">Add a product.</a>
    }
    else if (MappingSearch.Classes.CurrentCategory.IsMotorcycle())
    {
        <a href="@MappingSearch.Constants.PathConstants.Pages.AddMotorcyclePath">Add a motorcycle.</a>
    }
    <div id="contentBody">

    </div>
    <div style="display:none" id="noProductsFound">
            <p class="alert alert-info">No products match your criteria.</p>
        </div>
</div>

<script type="text/html" id="ProductsViewTemplate">
   <a href="/Review/Index/<%= ProductId%>">
    <div class="well span2 text-center">
        <div class="row productHead">
            <h4 class="capitalize"><%= Title%></h4>
        </div>
        <img src="<%= Image%>" class="img" height="150" width="100"/>
        <div class="row">
             <h5 class="capitalize"><%= Brand%></h5>
            <h5>MSRP : <%= MSRP%></h5>
        </div>
    </div>
    </a>
</script>

<script src="~/Scripts/ProductSelection.js"></script>
