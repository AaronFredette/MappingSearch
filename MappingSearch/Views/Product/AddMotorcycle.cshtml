@model MappingSearch.Models.Product.NewMotorcycleModel
@{
    ViewBag.Title = "AddMotorcycle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Motorcycle</h2>
    <div class="alert alert-info">
        All fields with * are required.
    </div>
    <div class="alert alert-block" id="globalFormError" style="display:none;">
        There was an error processing your entry. Please check for errors.
    </div>
    
    <form>
        <div class="pull-left span6">
         <div class="pull-left">
        <h3>Basic Information</h3>
            <div class="editor-label">
                @Html.LabelFor(model=> model.ProductName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model=>model.ProductName)
                 <div class="field-validation-error alert alert-block" id="productNameError"  style="display:none;">
                   Product name is required.
                </div>
            </div>
           
            <div class="editor-label">
                @Html.LabelFor(model=> model.Subcategory)
            </div>
            <div class="editor-field">
                @Html.DropDownList("Subcategory", (SelectList) ViewData["Subcategories"])
                <div class="field-validation-error alert alert-block" id="subcategoryError" style="display:none;">
                   Subcategory is required.
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model=> model.Brand)
            </div>
            <div class="editor-field">
                @Html.DropDownList("Brand", (SelectList) ViewData["Brands"])

                <div id="otherBrandContainer" style="display:none;">
                    @Html.LabelFor(model => model.OtherBrand)
                    @Html.TextBoxFor(model=> model.OtherBrand)
                    </div>
                <div class="field-validation-error alert alert-block" id="otherBrandError" style="display:none;">
                    Please enter new brand.
                </div>
                <div class="field-validation-error alert alert-block" id="brandError" style="display:none;">
                    Brand is required.
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model=> model.Description)
            </div>
        
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description, new {@cols="80" , @rows="4" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(model=> model.Price)
            </div>
            <div class="editor-field">
                $@Html.EditorFor(model=>model.Price)
                  <div class="field-validation-error alert alert-block" id="priceError" style="display:none;">
                    Please enter valid price. Example <b>99.00</b>
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model=> model.SiteUrl)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model=>model.SiteUrl)
            </div>
            <div class="editor-fiedl">
                <input type="button" class="btn" value="Submit For Approval" id="submitNewGear" />
            </div>
        </div>
    
        <div class="pull-right">
            <h3>Specifications</h3>
       

            <div class="editor-label">
                @Html.LabelFor(model=> model.Displacement)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model=>model.Displacement)
                <div class="field-validation-error alert alert-block" id="displacementError" style="display:none;">
                       Displacement is required.
                </div>
            </div>
              <div class="editor-label">
                @Html.LabelFor(model=> model.Gears)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model=>model.Gears)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model=> model.Torque)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model=>model.Torque)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model=> model.TopSpeed)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model=>model.TopSpeed)
            </div>
        
            <div class="editor-label">
                @Html.LabelFor(model=> model.EngineType)
            </div>
            <div class="editor-field">
                 @Html.DropDownList("EngineType", (SelectList) ViewData["EngineType"])
            </div>
        </div>
        </div>
    </form>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
<script src="~/Scripts/AddMotorcycle.js"></script>
