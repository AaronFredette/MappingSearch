@{
    ViewBag.Title = "Home";
}

<script src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
<script type="text/html" id="LocationListViewTemplate">
    <div class="well span10">
        <div class="basicInfo span4">
            <h3><%= Name%></h3>
            <label><%= State%></label>
        </div>
         <div class="distanceInfo span4 offset1">
            <% if(DistanceFromYou >0){%>
               <label> <%= DistanceFromYou%> Miles From You</label>
             <% } %>
    
            <div class="mapCanvas" style="height:250px;width:250px;">

            </div>
        </div>
    </div>

</script>


<script type="text/html" id="LocationDetailsTemplate">
    <div class="lightBoxOverLay"></div>
    <div class="lightBox">
        <div class="closeLightBox">X</div>
        <h1><%= Name%> </h1>
        <div class="LocationDetails"> 
            <label>Address: </label>
            <address>
               <%= StreetAdd%><br />
                <%= City%>, <%= State%> <%= Zip%>
               <br />
            </address>
            <label>Details</label><p><%= Details%> </p>
        </div>
        <% if(Url !='' && Url!= null){ %>
        For more information <a href="<%= Url%>">visit their site </a>
        <% } %>
    </div>
   
</script>

<script type="text/html" id="SearchByStateTemplate">
    
    <div id="searchContainer" class="row span10">
        <div class="span4">
            <div class="row">
                <label>Search by state:</label> 
                <br />
                <select id="searchState">
                    <option value="">Select State</option>
                    <option value="VT">Vermont</option>
                    <option value="NH">New Hampshire</option>
                </select>
            </div>
            <div class="row">
                <button id="clearSearch" class="btn">Clear Search</button>
            </div>
        </div>
        <div class="span2">
            <h1>OR</h1>
        </div>

        <div id="seachByDistance" class="span3 pull-right">
            <label>Search by distance from your zip code: </label>
            <br />
            <select id="searchMiles">
                <option>Select Distance</option>
                <option value="50">50 Miles</option>
                <option value="100">100 Miles</option>
                <option value="150">150 Miles</option>
                <option value="200">200 Miles</option>
                <option value="300">300 Miles</option>
            </select>
            <label> from</label>
            <input type="text" id="searchZip" placeholder="Zip Code"/>
            <br />
            <button class="btn" id="searchDistanceBtn">Search</button>
                <div class="alert-block alert" id="searchDistError" style="display:none;"><label class="text-error" >Please enter zip code and distance.</label></div>
            </div>
    </div>
    <div class="pageBreak"></div>
</script>

<script type="text/html" id="AllLocationsTemplate">
    <div class="">
        <ul id="allLocationsList" class="unstyled container"></ul>
    </div>
</script>

<div id="contentHead" class="row"></div>
<div class="row">&nbsp;</div>
<div id="contentBody" class="row"></div>
<div id="contentPopUp" class="lightBoxContainer" style="display:none;"></div>


<script src="~/Scripts/Locations.js" type="text/javascript" ></script>
